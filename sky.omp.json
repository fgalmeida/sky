{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}} {{end}}{{.UserName}} ‚ûî üìÅ{{.Folder}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#FF79C6",
          "properties": {
            "prefix": "\u250c ",
            "template": "@{{ .UserName }}"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "invert_powerline": false,
          "foreground": "#988BC7",
          "properties": {
            "prefix": "<#ffffff>in</> ~/",
            "style": "folder",
            "exclude_folders": ["/super/secret/project"],
            "folder_separator_icon": " / ",
            "enable_hyperlink": false
          }
        },
        {
          "type": "git",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#67E480",
          "background": "transparent",
          "properties": {
            "prefix": "<#ffffff>on</> ",
            "template": "{{ .HEAD }} "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#483C67"
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#67E480",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#FF79C6",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "\u2514 "
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#67E480",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "$"
          }
        }
      ]
    }
  ]
}
